extends layout


block content
	div
			form(action='/', method='POST')
				input(type='text', name='todo')
				input(type='submit', value='Submit')
			div
				h2 TODO
					div
						ul
							each item in todoItems
								unless item.done
									li 
										a(href='/change/' + item.id) #{item.name}
					
				H2 DONE
					div 
						ul
							each item in todoItems
								if item.done
									li 
										a(href='/delete/' + item.id) #{item.name}
